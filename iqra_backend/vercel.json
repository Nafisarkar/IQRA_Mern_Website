{
  "version": 2,
  "name": "iqra-backend",
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 10 }
    }
  ],
  "routes": [
    {
      "src": "/(api|seed)/(.*)",
      "dest": "/index.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://your-client-domain.vercel.app",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Allow-Methods": "GET,OPTIONS,POST,PUT,PATCH,DELETE",
        "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Content-Length, Content-MD5, Content-Type, Date, Authorization"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
